
@await Html.PartialAsync("Partial/_Slider")

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync("Partial/_LeftSideBar")
            </div>

            <div class="col-sm-9 padding-right">
                @await Html.PartialAsync("Partial/_FeaturesItems")

                @await Html.PartialAsync("Partial/_CategoryTab")

                @await Html.PartialAsync("Partial/_RecommendedItems")
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
}
@section Styles {
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
}